{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./dist"
  },
  "typedocOptions" : {
    "githubPages": false,
    "categorizeByGroup": false,
    "excludeInternal": true,
    "sort": "static-first",
    "hideGenerator": true,
    "defaultCategory": "Chuck",
    "visibilityFilters": {
      "private": false,
      "inherited": false,
    },
    "exclude": "src/DeferredPromise.ts",
    "plugin": [],
    // "sidebarLinks": { 
    //   "Getting Started": "./",
    // },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
